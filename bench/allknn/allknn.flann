#!/usr/bin/env python

import sys
import numpy as np
from pyflann import *

print "loading csv"
f = open(sys.argv[1])
data = np.loadtxt(fname=f, delimiter=',')

print "building index"
flann = FLANN()
params = flann.build_index(data, algorithm="autotuned", target_precision=1)

print "performing queries"
result,dists = flann.nn_index(data, int(sys.argv[2]), checks=params["checks"]);
